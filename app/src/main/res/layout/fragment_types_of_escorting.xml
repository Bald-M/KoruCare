<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

<!-- Types of Escorts title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/types_title"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView containing the information box -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonReadMore">

        <!-- Box containing the escorting information -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_p"
            android:padding="16dp">

            <!-- Scheduled Escorts Section -->
            <TextView
                android:id="@+id/textViewTypesH1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/types_h1"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewTypesTxt1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/types_txt1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTypesH1"
                app:layout_constraintBottom_toTopOf="@id/textViewTypesH2"
                android:layout_marginTop="8dp" />

            <!-- Unscheduled Escorts Section -->
            <TextView
                android:id="@+id/textViewTypesH2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/types_h2"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTypesTxt1"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textViewTypesTxt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/types_txt2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTypesH2"
                app:layout_constraintBottom_toTopOf="@id/textViewTypesH3"
                android:layout_marginTop="8dp" />

            <!-- After-hours Escorts Section -->
            <TextView
                android:id="@+id/textViewTypesH3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/types_h3"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTypesTxt2"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textViewTypesTxt3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/types_txt3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTypesH3"
                app:layout_constraintBottom_toTopOf="@id/textViewTypesH4"
                android:layout_marginTop="8dp" />

            <!-- Escorting by Road Section -->
            <TextView
                android:id="@+id/textViewTypesH4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/types_h4"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTypesTxt3"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textViewTypesTxt4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/types_txt4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTypesH4"
                app:layout_constraintBottom_toTopOf="@id/textViewTypesH5"
                android:layout_marginTop="8dp" />

            <!-- Escorting by Air Section -->
            <TextView
                android:id="@+id/textViewTypesH5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/types_h5"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTypesTxt4"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textViewTypesTxt5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/types_txt5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTypesH5"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Read More button -->
    <Button
        android:id="@+id/buttonReadMore"
        style="@style/BlueButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/read_more"
        android:onClick="onEscortingReadMoreClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
